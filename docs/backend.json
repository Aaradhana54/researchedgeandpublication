{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores public and private information about a user.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID." },
        "name": { "type": "string", "description": "The user's full name." },
        "email": { "type": "string", "format": "email" },
        "role": {
          "type": "string",
          "enum": ["client", "admin", "staff"],
          "description": "The user's role in the system."
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["uid", "name", "email", "role", "createdAt"]
    },
    "Project": {
      "title": "Project",
      "description": "Represents a single research or publishing project.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The UID of the client who owns the project." },
        "title": { "type": "string" },
        "serviceType": {
          "type": "string",
          "enum": [
            "thesis-dissertation", 
            "research-paper", 
            "book-writing",
            "review-paper",
            "research-publication",
            "book-publishing"
          ]
        },
        "topic": { "type": "string", "description": "The specific topic of the project." },
        "courseLevel": { "type": "string", "enum": ["ug", "pg", "phd"], "description": "The academic level of the course." },
        "deadline": { "type": "string", "format": "date-time", "description": "The project deadline." },
        "synopsisFileUrl": { "type": "string", "description": "URL to the uploaded synopsis file." },
        "referencingStyle": { "type": "string", "description": "The required referencing style (e.g., APA, MLA)." },
        "pageCount": { "type": "number", "description": "The estimated number of pages." },
        "wordCount": { "type": "number", "description": "The estimated word count." },
        "language": { "type": "string", "description": "The language of the project." },
        "wantToPublish": { "type": "boolean", "description": "Indicates if the client wants to publish the work." },
        "publishWhere": { "type": "string", "description": "Specifies where the client wants to publish." },
        "currentStage": { "type": "string" },
        "progressPercent": { "type": "number" },
        "status": { "type": "string", "enum": ["active", "completed", "on-hold"] },
        "approved": { "type": "boolean", "description": "Whether the project has been approved by staff." },
        "assignedTeam": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "title", "serviceType", "status", "createdAt", "approved"]
    },
    "ContactLead": {
      "title": "Contact Lead",
      "description": "A lead from the public contact form.",
      "type": "object",
      "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "phone": { "type": "string" },
          "message": { "type": "string" },
          "serviceType": { "type": "string" }
      },
      "required": ["name", "email", "message"]
    },
    "Testimonial": {
        "title": "Testimonial",
        "description": "A customer testimonial.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "designation": { "type": "string" },
            "message": { "type": "string" },
            "approved": { "type": "boolean" }
        },
        "required": ["name", "message", "approved"]
    },
    "InviteCode": {
        "title": "Invite Code",
        "description": "A one-time use code for admin signup.",
        "type": "object",
        "properties": {
          "code": { "type": "string" },
          "claimed": { "type": "boolean" },
          "claimedBy": { "type": "string", "description": "UID of the user who claimed it." },
          "claimedAt": { "type": "string", "format": "date-time" },
          "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["code", "claimed", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Top-level collection for all research projects."
    },
    "/contact_leads/{contactLeadId}": {
      "schema": { "$ref": "#/entities/ContactLead" },
      "description": "Collection for public contact form submissions."
    },
     "/testimonials/{testimonialId}": {
      "schema": { "$ref": "#/entities/Testimonial" },
      "description": "Collection for customer testimonials."
    },
    "/invites/{inviteId}": {
        "schema": { "$ref": "#/entities/InviteCode" },
        "description": "Stores one-time admin invite codes."
    }
  }
}
