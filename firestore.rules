
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // --- Safe Role Checking Functions ---
    
    function userDocExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function hasRole(role) {
      return request.auth != null
        && userDocExists()
        && getUserRole() == role;
    }

    function isReferralPartner() {
      return hasRole('referral-partner');
    }

    function isSalesTeam() {
      let role = getUserRole();
      return role == 'sales-team' || role == 'sales-manager';
    }

    function isSalesManager() {
        return hasRole('sales-manager');
    }
    
    function isSalesTeamAssigned(assignedSalesId) {
        return isSalesTeam() && request.auth.uid == assignedSalesId;
    }

    function isAdmin() {
      return hasRole('admin');
    }
    
    function isWritingTeam() {
      return hasRole('writing-team');
    }
    
    function isWriterAssigned(writerId) {
        return isWritingTeam() && request.auth.uid == writerId;
    }

    function isAllowedToCreateOwnProfile(userId) {
      let isCreatingOwnDoc = request.auth != null && request.auth.uid == userId;
      let data = request.resource.data;
      let isValidRole = data.role == 'client' || data.role == 'referral-partner';
      let uidMatches = data.uid == request.auth.uid;

      return isCreatingOwnDoc && isValidRole && uidMatches;
    }
    
    function isClientCreatingOwnProject() {
        let data = request.resource.data;
        // List of fields a client is NOT allowed to set on creation.
        let forbiddenKeys = [
            'dealAmount', 'advanceReceived', 'discussionNotes', 'paymentScreenshotUrl', 
            'finalDeadline', 'finalizedAt', 'finalizedBy', 'assignedWriterId', 'assignedSalesId',
            'rejectionReason', 'referredByPartnerId', 'approvalEmailSent'
        ];
        
        let isCreatingOwnProject = request.auth != null && request.auth.uid == data.userId;
        let noForbiddenFields = !data.keys().hasAny(forbiddenKeys);
        
        return isCreatingOwnProject && noForbiddenFields && data.status == 'pending';
    }


    match /users/{userId} {
      // New users can create their own profile with 'client' or 'referral-partner' role.
      // Admins can create any user with any role.
      allow create: if isAllowedToCreateOwnProfile(userId) || isAdmin();

      // Users can read their own profile. Admins can read any profile.
      // Referral partners can read profiles of clients they referred.
      // Sales team can read any user profile.
      allow read: if isOwner(userId) || isAdmin() || isSalesTeam() || isWritingTeam() || (isReferralPartner() && resource.data.referredBy == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.referralCode);
      
      // Admins, referral partners, and sales team can list users (will be filtered in app).
      allow list: if request.auth != null && (
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in 
                    ['admin', 'sales-manager', 'sales-team', 'writing-team', 'referral-partner']
                  );

      // Users can update their own profile, but cannot change their role. 
      // Admins can update any profile, but also cannot change roles for security.
      allow update: if (isOwner(userId) || isAdmin()) && request.resource.data.role == resource.data.role;
      // Only admins can delete users.
      allow delete: if isAdmin();
    }
    
    match /projects/{projectId} {
      // Clients can create their own project with status 'pending'
      // Sales team can create on behalf of others.
      allow create: if isClientCreatingOwnProject() || isSalesTeam();

      // Owners, admins, or sales team can manage projects.
      // Writers can read projects if they are assigned (checked by client-side logic).
      allow read: if isOwner(resource.data.userId) || isAdmin() || isSalesTeam() || isWriterAssigned(resource.data.assignedWriterId);
      
      // Admins, sales team can update any project. Owners can update their own.
      allow update: if isOwner(resource.data.userId) || isAdmin() || isSalesTeam();
      
      allow delete: if isOwner(resource.data.userId) || isAdmin();
      
      // Authenticated users (clients, admins, partners, sales, writers) can list projects.
      // Sales team can list projects they finalized.
      allow list: if request.auth != null;
    }
    
    match /contact_leads/{contactLeadId} {
      // Anyone can submit a lead (e.g., from the public contact form).
      // Referral partners can also submit leads for their account.
      allow create: if true;
      // Admins and Sales team can read/list.
      // The partner who created the lead can read/list.
      allow read, list: if isAdmin() || isSalesTeam() || (isReferralPartner() && resource.data.referredByPartnerId == request.auth.uid);
      // Sales team can update status to converted.
      allow update: if isSalesTeam();
      allow delete: if false;
    }

    match /testimonials/{testimonialId} {
      // Anyone can view testimonials.
      allow get, list: if true;
      // No one can create/update/delete from the client.
      allow create, update, delete: if false;
    }

    match /referrals/{referralId} {
        // Partners can create referrals for users.
        allow create: if isReferralPartner() && request.resource.data.partnerId == request.auth.uid;
        // Partners can read their own referrals. Admins can read all.
        allow read, list: if (isReferralPartner() && resource.data.partnerId == request.auth.uid) || isAdmin();
        allow update, delete: if isAdmin();
    }

    match /payouts/{payoutId} {
      // Partners can create their own payout requests.
      allow create: if isReferralPartner() && request.resource.data.userId == request.auth.uid;
      // Partners, Admins, and Sales Team can manage all.
      allow read, list: if (isReferralPartner() && resource.data.userId == request.auth.uid) || isAdmin() || isSalesTeam();
      // Only Admins can update (e.g. to 'paid') or delete payouts.
      allow update, delete: if isAdmin();
    }

    match /marketing_assets/{assetId} {
        // Only admins can create, update, or delete marketing assets.
        allow create, update, delete: if isAdmin() && request.resource.data.category in ['demo-thesis', 'demo-synopsis', 'general-marketing'];
        // All authenticated users (including referral partners) can read and list the assets.
        allow read, list: if request.auth != null;
    }

    match /feedbacks/{feedbackId} {
      // Anyone can create new feedback.
      allow create: if request.resource.data.status == 'pending';
      
      // Admins can update and delete any feedback document.
      allow update, delete: if isAdmin();

      // Admins can read any feedback. Public can read approved feedback.
      allow read: if isAdmin() || resource.data.status == 'approved';
      
      // Admins can list ALL feedback. Public can ONLY list where status is 'approved'.
      allow list: if isAdmin() || (request.query.where.get('status') == 'approved');
    }

    match /chats/{chatId} {
      // A user can read/write a chat document if they are one of the participants.
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
      
      // Allow creation if the creating user is one of the participants.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
      
      match /messages/{messageId} {
        // A user can read messages if they are a participant in the parent chat document.
        allow read: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // A user can create a message if they are a participant and the senderId matches their UID.
        allow create: if request.auth != null 
                        && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
                        && request.resource.data.senderId == request.auth.uid;
                        
        allow update, delete: if false; // Messages are immutable.
      }
    }
    
    // Collection for sending emails via the "Trigger Email" extension
    match /mail/{docId} {
        // Allow any authenticated user to create email documents.
        // The extension runs with admin privileges and handles the sending.
        allow create: if request.auth != null;
        allow read, update, delete: if false; // No one can read/modify/delete emails from the client.
    }
    
    // --- Admin-only Collections (with exceptions) ---

    match /tasks/{taskId} {
      allow read, list, create: if isAdmin() || isWritingTeam();
      allow update, delete: if isAdmin() || isWritingTeam();
    }

    match /book_sales/{saleId} {
      allow read, write, create, list, update, delete: if isAdmin() || isSalesTeam();
    }

    match /invoices/{invoiceId} {
      allow read, write, create, list, update, delete: if isAdmin() || isSalesTeam();
    }

    match /notifications/{notificationId} {
       allow read, write, create, list, update, delete: if isAdmin() || (isOwner(resource.data.userId));
    }
    
    match /metadata/{docId} {
        allow read, write: if isAdmin() || isSalesTeam() || isReferralPartner();
    }
  }
}
