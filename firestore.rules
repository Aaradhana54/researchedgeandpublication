
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isReferralPartner() {
        return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'referral-partner';
    }

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isAllowedToCreateOwnProfile() {
      return request.auth != null && 
             request.auth.uid == request.resource.data.uid &&
             (request.resource.data.role == 'client' || request.resource.data.role == 'referral-partner');
    }

    match /users/{userId} {
      // New users can create their own profile with 'client' or 'referral-partner' role.
      // Admins can create any user with any role.
      allow create: if isAllowedToCreateOwnProfile() || isAdmin();
      // Users can read their own profile. Admins can read any profile and list all users.
      // Referral partners can list clients they have referred.
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isAdmin() || isReferralPartner();

      // Users can update their own profile, but cannot change their role. 
      // Admins can update any profile, but also cannot change roles for security.
      allow update: if (isOwner(userId) || isAdmin()) && request.resource.data.role == resource.data.role;
      // Only admins can delete users.
      allow delete: if isAdmin();
    }
    
    match /projects/{projectId} {
      // Authenticated users can create projects for themselves.
      // The shape of the data is validated by the server action, so we only check auth here.
      allow create: if request.auth != null && isOwner(request.resource.data.userId);
      // Owners or admins can manage projects.
      allow read, update, delete: if isOwner(resource.data.userId) || isAdmin();
      // Authenticated users can list projects (will be filtered by user ID in the app query). Admins can list all.
      allow list: if request.auth != null;
    }
    
    match /contact_leads/{contactLeadId} {
      // Anyone can submit the contact form.
      allow create: if true;
      // Only admins can read/list. No one can update/delete from the client.
      allow read, list: if isAdmin();
      allow update, delete: if false;
    }

    match /testimonials/{testimonialId} {
      // Anyone can view testimonials.
      allow get, list: if true;
      // No one can create/update/delete from the client.
      allow create, update, delete: if false;
    }

    match /referrals/{referralId} {
        // Partners can create referrals for users.
        allow create: if isReferralPartner() && request.resource.data.partnerId == request.auth.uid;
        // Partners can read their own referrals. Admins can read all.
        allow read, list: if (isReferralPartner() && resource.data.partnerId == request.auth.uid) || isAdmin();
        allow update, delete: if isAdmin();
    }

    match /payouts/{payoutId} {
      // Partners can create their own payout requests.
      allow create: if isReferralPartner() && request.resource.data.userId == request.auth.uid;
      // Partners can read their own payout history. Admins can manage all.
      allow read, list: if (isReferralPartner() && resource.data.userId == request.auth.uid) || isAdmin();
      // Only Admins can update (e.g. to 'paid') or delete payouts.
      allow update, delete: if isAdmin();
    }
    
    // --- Admin-only Collections ---

    match /tasks/{taskId} {
      allow read, write, create, list, update, delete: if isAdmin();
    }

    match /book_sales/{saleId} {
      allow read, write, create, list, update, delete: if isAdmin();
    }

    match /invoices/{invoiceId} {
      allow read, write, create, list, update, delete: if isAdmin();
    }

    match /notifications/{notificationId} {
       allow read, write, create, list, update, delete: if isAdmin();
    }
  }
}
