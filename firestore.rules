rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function uid() {
      return request.auth.uid;
    }

    // Function to get the user's profile document from Firestore
    function getUserDoc(userId) {
      return get(/databases/$(database)/documents/users/$(userId));
    }

    // Function to check if the user has a profile document
    function hasUserDoc() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(uid()));
    }

    // Function to check the user's role from their profile
    function roleIs(role) {
      // This is safe because it only runs if the user document exists
      return hasUserDoc() && getUserDoc(uid()).data.role == role;
    }

    function isAdmin() { return roleIs("admin"); }
    function isStaff() { return roleIs("staff"); }
    function isClient() { return roleIs("client"); }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    match /users/{userId} {
      // READ:
      // - Admins can read any user profile.
      // - Any signed-in user can read their own profile.
      allow get: if isAdmin() || (isSignedIn() && userId == uid());
      allow list: if isAdmin(); // Only admins can list all users.

      // CREATE:
      // - Any authenticated user can create their OWN user document if signing up as a client.
      // - Admin creation is done manually or via a secure backend process, not via this rule.
      allow create: if isSignedIn() && userId == uid() && request.resource.data.role == 'client';

      // UPDATE:
      // - Admins can update any user profile (including changing roles).
      // - A user can update their own profile, but they CANNOT change their own role.
      allow update: if isAdmin() || (isSignedIn() && userId == uid() && request.resource.data.role == resource.data.role);
      
      // DELETE:
      // - Only admins can delete user profiles.
      allow delete: if isAdmin();
    }

    match /projects/{projectId} {
      // CREATE: A client can create a project for themselves. Admins can create any project.
      allow create: if (isClient() && request.resource.data.userId == uid()) || isAdmin();

      // READ (get, list):
      // - A user can read a project if they are the owner.
      // - Staff and Admins can read any project.
      // - For list queries, Firestore checks this rule on EACH document returned.
      allow read: if (isSignedIn() && resource.data.userId == uid()) || isStaff() || isAdmin();
      
      // UPDATE: Owner, Staff, or Admin can update.
      allow update: if (isSignedIn() && resource.data.userId == uid()) || isStaff() || isAdmin();

      // DELETE: Only admins can delete projects.
      allow delete: if isAdmin();
    }
    
    match /contact_leads/{contactLeadId} {
      // Anyone can submit the contact form.
      allow create: if true;
      // Only admins and staff can view or manage leads.
      allow read, update, delete: if isAdmin() || isStaff();
      allow list: if isAdmin() || isStaff();
    }

    match /testimonials/{testimonialId} {
      // Anyone can view approved testimonials.
      allow get, list: if resource.data.approved == true;
      // Only admins can create, update, or delete testimonials.
      allow create, update, delete: if isAdmin();
    }
  }
}
