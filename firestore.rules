rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // New users can only create their own profile with the 'client' role.
      allow create: if isOwner(userId) && request.resource.data.role == 'client';
      // Users can read and update their own profile. An admin cannot change a user's role.
      allow read: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
      // Admins can update any user's profile (except for their role)
      allow update: if isAdmin() && request.resource.data.role == resource.data.role;
      allow delete, list: if false;
    }
    
    match /projects/{projectId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isOwner(resource.data.userId) || isAdmin();
      allow list: if request.auth != null;
    }
    
    match /contact_leads/{contactLeadId} {
      // Anyone can submit the contact form.
      allow create: if true;
      // No one can read/update/delete from the client. This data is for backend use.
      allow read, update, delete: if false;
      allow list: if isAdmin();
    }

    match /testimonials/{testimonialId} {
      // Anyone can view testimonials.
      allow get, list: if true;
      // No one can create/update/delete from the client.
      allow create, update, delete: if false;
    }
  }
}
