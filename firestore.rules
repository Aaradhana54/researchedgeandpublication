rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow create: if isOwner(userId);
      allow read, update: if isOwner(userId);
      allow delete, list: if false;
    }
    
    match /projects/{projectId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null;
    }
    
    match /contact_leads/{contactLeadId} {
      // Anyone can submit the contact form.
      allow create: if true;
      // No one can read/update/delete from the client. This data is for backend use.
      allow read, update, delete: if false;
      allow list: if false;
    }

    match /testimonials/{testimonialId} {
      // Anyone can view testimonials.
      allow get, list: if true;
      // No one can create/update/delete from the client.
      allow create, update, delete: if false;
    }
  }
}
