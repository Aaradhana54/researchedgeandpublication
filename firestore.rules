rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // New users can only create their own profile with the 'client' role.
      allow create: if isOwner(userId) && request.resource.data.role == 'client';
      // Users can read their own profile. Admins can read any profile.
      allow read: if isOwner(userId) || isAdmin();
      // Users can update their own profile, but cannot change their role. Admins can update any profile, but also cannot change roles.
      allow update: if (isOwner(userId) || isAdmin()) && request.resource.data.role == resource.data.role;
      // No one can delete users or list all users from the client.
      allow delete, list: if isAdmin();
    }
    
    match /projects/{projectId} {
      // Authenticated users can create projects.
      allow create: if request.auth != null;
      // Owners or admins can read, update, and delete.
      allow read, update, delete: if isOwner(resource.data.userId) || isAdmin();
      // Authenticated users can list projects (will be filtered by user ID in the app query). Admins can list all.
      allow list: if request.auth != null;
    }
    
    match /contact_leads/{contactLeadId} {
      // Anyone can submit the contact form.
      allow create: if true;
      // Only admins can read/list. No one can update/delete from the client.
      allow read, list: if isAdmin();
      allow update, delete: if false;
    }

    match /testimonials/{testimonialId} {
      // Anyone can view testimonials.
      allow get, list: if true;
      // No one can create/update/delete from the client.
      allow create, update, delete: if false;
    }
    
    // --- Admin-only Collections ---

    match /tasks/{taskId} {
      allow read, write, create, list, update, delete: if isAdmin();
    }

    match /book_sales/{saleId} {
      allow read, write, create, list, update, delete: if isAdmin();
    }

    match /payouts/{payoutId} {
      allow read, write, create, list, update, delete: if isAdmin();
    }

    match /invoices/{invoiceId} {
      allow read, write, create, list, update, delete: if isAdmin();
    }

    match /notifications/{notificationId} {
       allow read, write, create, list, update, delete: if isAdmin();
    }
  }
}
