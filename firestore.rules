rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function uid() {
      return request.auth.uid;
    }

    // Function to get the user's profile document
    function getUserDoc(userId) {
      return get(/databases/$(database)/documents/users/$(userId));
    }

    // Function to check if the user has a profile document
    function hasUserDoc() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(uid()));
    }

    // Function to check the user's role from their profile
    function roleIs(role) {
      return hasUserDoc() && getUserDoc(uid()).data.role == role;
    }

    function isAdmin() { return roleIs("admin"); }
    function isStaff() { return roleIs("staff"); }
    function isClient() { return roleIs("client"); }


    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    match /users/{userId} {
      // A user can create their own profile, but cannot assign a role other than 'client'.
      allow create: if isSignedIn() && userId == uid()
        && request.resource.data.role == "client"
        && request.resource.data.email == request.auth.token.email;

      // A user can read their own profile. Admins can read any profile.
      allow get: if (isSignedIn() && userId == uid()) || isAdmin();
      allow list: if isAdmin();

      // A user can update their own profile, but cannot change their role. Admins can.
      allow update: if (isSignedIn() && userId == uid() && request.resource.data.role == resource.data.role) || isAdmin();
      
      allow delete: if isAdmin();
    }

    match /projects/{projectId} {
      // A client can create a project for themselves.
      allow create: if isClient() && request.resource.data.userId == uid();

      // For LIST operations (queries), Firestore checks the `read` permission on each potential document.
      // This rule allows a document to be read if the requester is the owner, staff, or admin.
      // This implicitly secures the `list` operation when combined with a `where('userId', '==', uid())` clause.
      allow read: if (isSignedIn() && resource.data.userId == uid()) || isStaff() || isAdmin();
      
      // The `list` operation itself is granted if the query is correctly filtered.
      allow list: if (isClient() && request.query.where.get('userId', '') == uid()) || isStaff() || isAdmin();

      // A user can update their own project. Staff/Admins can update any.
      allow update: if (isSignedIn() && resource.data.userId == uid()) || isStaff() || isAdmin();

      // Only admins can delete projects.
      allow delete: if isAdmin();
    }
    
    match /contact_leads/{contactLeadId} {
      allow read, list, update, delete: if isAdmin();
      allow create: if true;
    }

    match /testimonials/{testimonialId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}
