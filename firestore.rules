
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // --- Safe Role Checking Functions ---
    
    function userDocExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    function hasRole(role) {
      return request.auth != null
        && userDocExists()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    function isReferralPartner() {
      return hasRole('referral-partner');
    }

    function isSalesTeam() {
      return hasRole('sales-team');
    }
    
    function isSalesTeamAssigned(assignedSalesId) {
        return isSalesTeam() && request.auth.uid == assignedSalesId;
    }

    function isAdmin() {
      return hasRole('admin');
    }
    
    function isWritingTeam() {
      return hasRole('writing-team');
    }

    function isWriterAssignedToProject(project) {
       return isWritingTeam() && request.auth.uid == project.assignedWriterId;
    }

    function isAllowedToCreateOwnProfile() {
      return request.auth != null && 
             request.auth.uid == request.resource.data.uid &&
             (request.resource.data.role == 'client' || request.resource.data.role == 'referral-partner');
    }
    
    function isClientCreatingOwnProject() {
      let data = request.resource.data;
      // List of fields a client is NOT allowed to set on creation.
      let forbiddenKeys = [
        'dealAmount', 'advanceReceived', 'discussionNotes', 
        'paymentScreenshotUrl', 'finalDeadline', 'finalizedAt', 
        'finalizedBy', 'assignedWriterId', 'status'
      ];
      
      return request.auth.uid == data.userId &&
             (!userDocExists() || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'client') &&
             request.resource.data.status == 'pending' &&
             // Ensure no forbidden fields are being set by the client.
             data.keys().toSet().intersection(forbiddenKeys.toSet()).size() == 0;
    }

    match /users/{userId} {
      // New users can create their own profile with 'client' or 'referral-partner' role.
      // Admins can create any user with any role.
      allow create: if isAllowedToCreateOwnProfile() || isAdmin();

      // Users can read their own profile. Admins can read any profile.
      // Referral partners can read profiles of clients they referred.
      // Sales team can read any user profile.
      allow read: if isOwner(userId) || isAdmin() || isSalesTeam() || isWritingTeam() || (isReferralPartner() && resource.data.referredBy == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.referralCode);
      
      // Admins, referral partners, and sales team can list users (will be filtered in app).
      allow list: if isAdmin() || isReferralPartner() || isSalesTeam() || isWritingTeam();

      // Users can update their own profile, but cannot change their role. 
      // Admins can update any profile, but also cannot change roles for security.
      allow update: if (isOwner(userId) || isAdmin()) && request.resource.data.role == resource.data.role;
      // Only admins can delete users.
      allow delete: if isAdmin();
    }
    
    match /projects/{projectId} {
      // Clients can create their own project, or sales team can create on behalf of others.
      allow create: if isClientCreatingOwnProject() || isSalesTeam();

      // Owners, admins, or sales team can manage projects.
      // Writers can read projects if they are assigned (checked by client-side logic).
      allow read: if isOwner(resource.data.userId) || isAdmin() || isSalesTeam() || isWritingTeam();
      
      // Admins, sales team can update any project. Owners can update their own.
      // Writers can update a project's status to 'completed'.
      allow update: if isOwner(resource.data.userId) || isAdmin() || isSalesTeamAssigned(resource.data.assignedSalesId) ||
                     (isWriterAssignedToProject(resource.data) && 
                      request.resource.data.status == 'completed' &&
                      request.resource.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt']));
      
      allow delete: if isOwner(resource.data.userId) || isAdmin();
      
      // Authenticated users (clients, admins, partners, sales, writers) can list projects.
      allow list: if request.auth != null;
    }
    
    match /contact_leads/{contactLeadId} {
      // Anyone can submit a lead (e.g., from the public contact form).
      // Referral partners can also submit leads for their account.
      allow create: if true;
      // Admins, Sales, and the partner who created the lead can read/list.
      allow read, list: if isAdmin() || isSalesTeamAssigned(resource.data.assignedSalesId) || (isReferralPartner() && resource.data.referredByPartnerId == request.auth.uid);
      // Sales team can update status to converted.
      allow update: if isSalesTeamAssigned(resource.data.assignedSalesId);
      allow delete: if false;
    }

    match /testimonials/{testimonialId} {
      // Anyone can view testimonials.
      allow get, list: if true;
      // No one can create/update/delete from the client.
      allow create, update, delete: if false;
    }

    match /referrals/{referralId} {
        // Partners can create referrals for users.
        allow create: if isReferralPartner() && request.resource.data.partnerId == request.auth.uid;
        // Partners can read their own referrals. Admins can read all.
        allow read, list: if (isReferralPartner() && resource.data.partnerId == request.auth.uid) || isAdmin();
        allow update, delete: if isAdmin();
    }

    match /payouts/{payoutId} {
      // Partners can create their own payout requests.
      allow create: if isReferralPartner() && request.resource.data.userId == request.auth.uid;
      // Partners can read their own payout history. Admins can manage all.
      allow read, list: if (isReferralPartner() && resource.data.userId == request.auth.uid) || isAdmin();
      // Only Admins can update (e.g. to 'paid') or delete payouts.
      allow update, delete: if isAdmin();
    }

    match /marketing_assets/{assetId} {
        // Only admins can create, update, or delete marketing assets.
        allow create, update, delete: if isAdmin() && request.resource.data.category in ['demo-thesis', 'demo-synopsis', 'general-marketing'];
        // All authenticated users (including referral partners) can read and list the assets.
        allow read, list: if request.auth != null;
    }

    match /feedbacks/{feedbackId} {
      // Anyone can create new feedback.
      allow create: if request.resource.data.status == 'pending';
      
      // Admins can update and delete any feedback document.
      allow update, delete: if isAdmin();

      // Admins can read any feedback. Public can read approved feedback.
      allow read: if isAdmin() || resource.data.status == 'approved';
      
      // Admins can list ALL feedback. Public can ONLY list where status is 'approved'.
      allow list: if isAdmin() || (request.query.where.get('status') == 'approved');
    }
    
    // --- Admin-only Collections (with exceptions) ---

    match /tasks/{taskId} {
      // Admins can do anything.
      allow create: if isAdmin();
      // Writers can list their own tasks.
      allow list: if isAdmin() || isWritingTeam();
      // Writers can read/update tasks assigned to them.
      allow read, update: if isAdmin() || (isWritingTeam() && resource.data.assignedTo == request.auth.uid);
      allow delete: if isAdmin();
    }

    match /book_sales/{saleId} {
      allow read, write, create, list, update, delete: if isAdmin();
    }

    match /invoices/{invoiceId} {
      allow read, write, create, list, update, delete: if isAdmin();
    }

    match /notifications/{notificationId} {
       allow read, write, create, list, update, delete: if isAdmin() || isOwner(resource.data.userId);
    }
    
    match /metadata/{docId} {
        allow read, write: if isAdmin() || isSalesTeam() || isReferralPartner();
    }
  }
}
